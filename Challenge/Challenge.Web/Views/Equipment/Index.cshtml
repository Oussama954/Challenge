@model Challenge.Web.Models.IndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("Index", "Equipment", FormMethod.Get))
{
    <p>
        Find by name:  @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Search" class="btn btn-default" />
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Serial Number", "Index", new { sortOrder = ViewBag.SerialNumberSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Next Control Date", "Index", new { sortOrder = ViewBag.NextControlDateSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            Picture
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Items)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SerialNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NextControlDate)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.PictureUrl)" width="96" height="65">
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.SerialNumber }) |
                @Html.ActionLink("Details", "Details", new { id = item.SerialNumber }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.SerialNumber })
            </td>
        </tr>
    }

</table>
<!-- pager -->
@if (Model.Pager.EndPage > 1)
{
    <ul class="pagination">
        @if (Model.Pager.CurrentPage > 1)
        {
            <li>
                <a href="~/Equipment/Index">First</a>
            </li>
            <li>
                <a href="~/Equipment/Index?page=@(Model.Pager.CurrentPage - 1)&SearchString=@ViewBag.CurrentFilter&sortOrder=@ViewBag.CurrentSort ">Previous</a>
            </li>
        }

        @for (var page = Model.Pager.StartPage; page <= Model.Pager.EndPage; page++)
        {
            <li class="@(page == Model.Pager.CurrentPage ? "active" : "")">
                <a href="~/Equipment/Index?page=@page&SearchString=@ViewBag.CurrentFilter&sortOrder=@ViewBag.CurrentSort ">@page</a>
            </li>
        }

        @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
        {
            <li>
                <a href="~/Equipment/Index?page=@(Model.Pager.CurrentPage + 1)&SearchString=@ViewBag.CurrentFilter&sortOrder=@ViewBag.CurrentSort ">Next</a>
            </li>
            <li>
                <a href="~/Equipment/Index?page=@(Model.Pager.TotalPages)&SearchString=@ViewBag.CurrentFilter&sortOrder=@ViewBag.CurrentSort ">Last</a>
            </li>
        }
    </ul>
}
